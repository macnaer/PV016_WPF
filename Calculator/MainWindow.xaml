<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="Calculator" MinHeight="525" MinWidth="350" Height="525" Width="350" >
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label x:Name="result" Content="0"
            Grid.ColumnSpan="4"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right"
            FontSize="50"   
         />
        <Button x:Name="acBtn" Content="AC"
            Grid.Row="1" 
            Foreground="Black"
            Click="acBtn_Click"     
        />
        <Button x:Name="negativeBtn" Content="+/-"
            Grid.Row="1" 
            Grid.Column="1"    
            Foreground="Black"
            Click="negativeBtn_Click"  
        />
        <Button x:Name="percenageBtn" Content="%"
            Grid.Row="1" 
            Grid.Column="2"    
            Foreground="Black"
            Click="percenageBtn_Click"
        />
        <Button x:Name="divisionBtn" Content="/"
            Grid.Row="1" 
            Grid.Column="3"
            Background="{StaticResource operatorsColor}"
            Click="operatorBtn_Click"
        />
        <Button x:Name="sevenBtn" Content="7" 
            Grid.Row="2"
            Background="{StaticResource numbersColor}"
            Click="numbersBtn_Click"    
        />
        <Button x:Name="eightBtn" Content="8" 
            Grid.Row="2"
            Grid.Column="1"     
            Background="{StaticResource numbersColor}"
            Click="numbersBtn_Click"        
        />
        <Button x:Name="nineBtn" Content="9" 
            Grid.Row="2"
            Grid.Column="2"     
            Background="{StaticResource numbersColor}"
            Click="numbersBtn_Click"        
        />
        <Button x:Name="multiplyBtn" Content="*"
            Grid.Row="2" 
            Grid.Column="3"
            Background="{StaticResource operatorsColor}"
            Click="operatorBtn_Click"
        />
        <Button x:Name="fourBtn" Content="4" 
            Grid.Row="3"
            Background="{StaticResource numbersColor}"
            Click="numbersBtn_Click"        
        />
        <Button x:Name="fiveBtn" Content="5" 
            Grid.Row="3"
            Grid.Column="1"     
            Background="{StaticResource numbersColor}"
            Click="numbersBtn_Click"    
        />
        <Button x:Name="sixBtn" Content="6" 
            Grid.Row="3"
            Grid.Column="2"     
            Background="{StaticResource numbersColor}"
            Click="numbersBtn_Click"        
        />
        <Button x:Name="plusBtn" Content="+"
            Grid.Row="3" 
            Grid.Column="3"
            Background="{StaticResource operatorsColor}"
            Click="operatorBtn_Click"
        />
        <Button x:Name="oneBtn" Content="1" 
            Grid.Row="4"
            Background="{StaticResource numbersColor}"
            Click="numbersBtn_Click"    
        />
        <Button x:Name="twoBtn" Content="2" 
            Grid.Row="4"
            Grid.Column="1"     
            Background="{StaticResource numbersColor}"
            Click="numbersBtn_Click"    
        />
        <Button x:Name="threeBtn" Content="3" 
            Grid.Row="4"
            Grid.Column="2"     
            Background="{StaticResource numbersColor}"
            Click="numbersBtn_Click"    
        />
        <Button x:Name="minusBtn" Content="-"
            Grid.Row="4" 
            Grid.Column="3"
            Background="{StaticResource operatorsColor}"
            Click="operatorBtn_Click"
        />
        <Button x:Name="zeroBtn" Content="0"
            Grid.Row="5"
            Grid.ColumnSpan="2"    
            Background="{StaticResource numbersColor}"
            Click="numbersBtn_Click"    
        />
        <Button x:Name="pointBtn" Content="." 
            Grid.Row="5"
            Grid.Column="2"     
            Background="{StaticResource numbersColor}"
            Click="pointBtn_Click"    
        />
        <Button x:Name="equalBtn" Content="=" 
            Grid.Row="5"
            Grid.Column="3"     
            Background="{StaticResource operatorsColor}"
            Click="equalBtn_Click"   
        />
    </Grid>
</Window>
